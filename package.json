    "@popperjs/core": "^2.4.4",
    "bcryptjs": "^2.4.3",
    "connect-mongo": "^3.2.0",
    "express": "^4.17.3",
    "express-session": "^1.17.1",
    "mongoose": "^5.9.24"
  },
  "devDependencies": {
    "concurrently": "^5.2.0",
    "nodemon": "^2.0.4"
  }
}
